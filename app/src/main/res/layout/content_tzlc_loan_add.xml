            android:layout_height="match_parent" android:layout_weight="0.3" android:orientation="horizontal">
            <RadioButton
                android:layout_width="match_parent" android:layout_weight="0.5" android:id="@+id/loanAddHomeClub"
                android:layout_height="match_parent" android:text="Home Club"/>
            <RadioButton
                android:layout_width="match_parent" android:layout_weight="0.5" android:id="@+id/loanAddAwayClub"
                android:layout_height="match_parent" android:text="Away Club"/>
        </RadioGroup>

