    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.26"
            android:text="Loan Club"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <Spinner
            android:id="@+id/spnLoanClub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:focusable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.26"
            android:text="Loanee"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <Spinner
            android:id="@+id/spnLoanPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="Loan Rule "
            android:textAlignment="textStart" />

        <RadioGroup
            android:id="@+id/rdgrpRule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <RadioButton android:layout_weight="0.25"
                android:id="@+id/rdgkl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="GKL" />

            <RadioButton android:layout_weight="0.25"
                android:id="@+id/rdavgkl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AVGKL" />

            <RadioButton android:layout_weight="0.25"
                android:id="@+id/rdavpl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AVPL" />

            <RadioButton android:layout_weight="0.25"
                android:id="@+id/rddl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DL" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="Player Value "
            android:textAlignment="textStart" />

        <EditText android:id="@+id/edtLoanPlayerValue"
            android:layout_width="match_parent" android:layout_weight="0.3"
            android:layout_height="match_parent" android:inputType="number"/>
        <TextView
            android:layout_width="match_parent" android:layout_weight="0.3"
            android:layout_height="match_parent" />

    </LinearLayout>

