<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" android:background="@drawable/roundbutton"
    android:orientation="horizontal" android:layout_marginTop="15dp"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.25"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="horizontal">
            <!--<ImageView android:id="@+id/displayclublogo"
                android:layout_width="match_parent" android:layout_weight="0.8"
                android:layout_height="match_parent" /> -->
            <TextView android:id="@+id/displayClubName"
                android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.2" android:textSize="@dimen/tzlcTextSize" android:textStyle="bold"
                android:layout_height="match_parent" android:text="Aundh Panther"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.5"
            android:layout_height="match_parent">
            <!--<TextView
                android:layout_width="match_parent" android:layout_weight="0.8" android:gravity="center" android:textSize="@dimen/tzlcTextSize"
                android:layout_height="match_parent" android:text="Manager : " />-->
            <TextView  android:id="@+id/displayClubManager"
                android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.2" android:textSize="@dimen/tzlcTextSize"
                android:layout_height="match_parent" android:text="Mu. Inamdar, Ad. Kotbagi"/>
        </LinearLayout>

    </LinearLayout>
    <View android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.75"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView android:id="@+id/displayClubShortName"
            android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.5" android:textSize="@dimen/tzlcTextSize" android:textStyle="bold"
            android:layout_height="match_parent" android:text="AP"/>

        <TextView android:id="@+id/displayClubGround"
            android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.5" android:textSize="@dimen/tzlcTextSize"
            android:layout_height="match_parent" android:text="NCL"/>
    </LinearLayout>

</LinearLayout>