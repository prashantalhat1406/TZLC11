<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_match_details_tabs"
    tools:showIn="@layout/activity_tzlc_match_details_tabs">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent" android:id="@+id/tabMatchDetailLayout" app:tabMaxWidth="0dp"
        android:layout_height="match_parent" android:layout_weight="0.85">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent" android:id="@+id/viewMatchDetailPage"
        android:layout_height="match_parent" android:layout_weight="0.15">

    </android.support.v4.view.ViewPager>

</LinearLayout>