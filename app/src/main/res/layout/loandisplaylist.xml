<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tzlcListViewItemHeight"
        android:orientation="horizontal" android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        >


        <TextView
            android:id="@+id/loanMissingPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:textSize="@dimen/tzlcTextSize"
            android:text="Club"

            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/loanLoanPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:textSize="@dimen/tzlcTextSize"
            android:text="Loan"

            android:layout_gravity="center"
            android:gravity="center"/>

        <!--<TextView
            android:id="@+id/loanLoanClub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Club"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />-->

        <TextView
            android:id="@+id/loanRule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:textSize="@dimen/tzlcTextSize"
            android:text="Rule"

            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/loanValueP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.24"
            android:textSize="@dimen/tzlcTextSize"
            android:text="Value"

            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>

</RelativeLayout>