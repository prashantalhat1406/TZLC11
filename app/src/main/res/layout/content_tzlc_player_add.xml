<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_player_add" android:orientation="vertical"
    tools:showIn="@layout/activity_tzlc_player_add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Name"  />

        <EditText
            android:id="@+id/edtPlayerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"  android:hint="First Name"/>
        <EditText
            android:id="@+id/edtPlayerLastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75" android:hint="Last Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Club" />

        <Spinner
            android:id="@+id/spnPlayerClub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3" android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Orgnization" />

        <Spinner
            android:id="@+id/spnPlayerOrgnization"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3" android:gravity="center" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Senile Wombats"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <CheckBox
            android:id="@+id/chkPlayerSW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:checked="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center" android:visibility="gone"
            android:textAlignment="textStart"
            android:text="Current Value" />

        <EditText
            android:id="@+id/edtCurrentValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number" android:visibility="gone"
            android:layout_weight="0.3"  android:hint="Current Value"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="0.10"></LinearLayout>

</LinearLayout>