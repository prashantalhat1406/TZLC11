<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".tzlc_match_details_squad">

    <View
        android:layout_width="match_parent" android:paddingTop="5dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.9"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:layout_weight="0.5"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="0.5"
            android:layout_height="match_parent">
            <RadioButton android:layout_weight="0.1" android:id="@+id/rdbsquadHome" android:textSize="@dimen/listSecondLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"  android:text="Home Club"/>
            <RadioButton android:layout_weight="0.1" android:id="@+id/rdbsquadAway" android:textSize="@dimen/listSecondLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:text="Away Club"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent" android:paddingTop="5dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout android:layout_weight="0.1"
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">
        <ListView android:id="@+id/tablstSquadDisplay" android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</LinearLayout>