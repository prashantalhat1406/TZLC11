<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal" android:layout_weight="0.9">

        <TextView
            android:layout_width="match_parent" android:id="@+id/tableClubs" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.18" android:text="Clubs"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tablePlayed" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="P"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableWin" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="W"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableDraw" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="D"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableLost" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="L"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableFor" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="F"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableAgainst" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="A"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableGoalDiff" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="GD"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tablePoints" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="PTs"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableHome" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="H"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableAway" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.2" android:text="A"/>

        <TextView
            android:layout_width="match_parent"  android:id="@+id/tableStatus" android:gravity="center" android:textAlignment="center"
            android:layout_height="match_parent" android:layout_weight="0.19" android:text=""/>

    </LinearLayout>

</LinearLayout>