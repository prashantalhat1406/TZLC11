<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_card_display" android:orientation="vertical"
    tools:showIn="@layout/activity_tzlc_card_display">
    <LinearLayout android:layout_weight="0.88"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Player"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Type"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Time"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:text="Reason"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <ListView android:layout_weight="0.12"
        android:id="@+id/displayCardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>