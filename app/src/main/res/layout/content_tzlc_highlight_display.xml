<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_highlight_display" android:orientation="vertical"
    tools:showIn="@layout/activity_tzlc_highlight_display">

    <LinearLayout android:layout_weight="0.88"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Match Time"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="VCM"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Club"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Highlight"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Highlight2"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>-->
    </LinearLayout>

    <ListView android:layout_weight="0.12"
        android:id="@+id/displayHighlightList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>