<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tzlc_match_details_stats">

    <TextView android:id="@+id/txtNoStats"  android:text="No Stats available" android:textSize="24dp" android:textStyle="bold"
        android:layout_width="wrap_content" android:visibility="gone" android:gravity="center"
            android:layout_height="wrap_content" />


    <LinearLayout android:layout_weight="0.75"
        android:id="@+id/statH1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchDetailsHomeClub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center" android:textStyle="bold"
                android:text="Home" />

            <TextView
                android:id="@+id/matchDetailsHomeScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Score" />

            <!--<TextView
                android:id="@+id/matchDetailsHomePossession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Pssession" />-->
        </LinearLayout>

        <View android:id="@+id/verticalLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchDetailsMatchType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Club" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Score" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Passes [Failed]" />-->
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchDetailsAwayClub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center" android:textStyle="bold"
                android:text="Home" />

            <TextView
                android:id="@+id/matchDetailsAwayScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Score" />

            <!--<TextView
                android:id="@+id/matchDetailsAwayPossession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Pssession" />-->
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout  android:layout_weight="0.7"
        android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/layoutPossessionStats"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.5"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txtvH1"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent"  />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvH2"
                android:layout_width="match_parent" android:layout_weight="0.1"   android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvH3"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvH4"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0.5"
            android:layout_height="match_parent">
            <TextView android:id="@+id/txtvA1"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvA2"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvA3"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView android:id="@+id/txtvA4"
                android:layout_width="match_parent" android:layout_weight="0.1"  android:gravity="center" android:text="50%"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout android:layout_weight="0.6"
        android:id="@+id/layoutGoals"
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="match_parent" >

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent" android:layout_weight="0.3"
            android:layout_height="match_parent">
            <TextView android:id="@+id/matchDetailsHomeGoals"
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Goals" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent" android:layout_weight="0.3"
            android:layout_height="match_parent">
            <TextView android:id="@+id/matchDetailsAwayGoals"
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout android:layout_weight="0.5"

        android:id="@+id/layoutStats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchDetailsHomeCARDS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="CARDS" />

            <TextView
                android:id="@+id/matchDetailsHomeDFK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="DFK" />

            <TextView
                android:id="@+id/matchDetailsHomeCOR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Corners" />


            <TextView
                android:id="@+id/matchDetailsHomeGK" android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Goal Kicks" />

            <TextView
                android:id="@+id/matchDetailsHomeSOnT" android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Shot On Target" />

            <TextView
                android:id="@+id/matchDetailsHomeSOffT" android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Shot Off Target" />

            <TextView
                android:id="@+id/matchDetailsHomeLC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Late Challange" />

            <TextView
                android:id="@+id/matchDetailsHomeTCK" android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Tackles" />

            <TextView
                android:id="@+id/matchDetailsHomeTI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Throw In" />

            <TextView
                android:id="@+id/matchDetailsHomeOFF" android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Offside" />

            <TextView
                android:id="@+id/matchDetailsHomePOP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="POP" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Cards" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Free Kicks" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Corner" />


            <TextView
                android:layout_width="match_parent" android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Goal Kicks" />

            <TextView
                android:layout_width="match_parent" android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Shots [ On Target ]" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center" android:visibility="gone"
                android:text="Shot Off Target" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Late Challenge" />

            <TextView
                android:layout_width="match_parent" android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Tackles" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Throw In" />

            <TextView
                android:layout_width="match_parent"  android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Offside" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="POP [ scored ]" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchDetailsAwayCards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="CARDS" />

            <TextView
                android:id="@+id/matchDetailsAwayDFK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="DFK" />

            <TextView
                android:id="@+id/matchDetailsAwayCOR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Corner" />


            <TextView
                android:id="@+id/matchDetailsAwayGK"  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Goal Kicks" />

            <TextView
                android:id="@+id/matchDetailsAwaySOnT"  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Shot On Target" />

            <TextView
                android:id="@+id/matchDetailsAwaySOffT"  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Shot Off Target" />

            <TextView
                android:id="@+id/matchDetailsAwayLC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Late Challange" />

            <TextView
                android:id="@+id/matchDetailsAwayTCK"  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Tackles" />

            <TextView
                android:id="@+id/matchDetailsAwayTI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Throw IN" />

            <TextView
                android:id="@+id/matchDetailsAwayOFF"  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Offside" />

            <TextView
                android:id="@+id/matchDetailsAwayPOP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="POP" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>