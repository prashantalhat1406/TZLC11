<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_player_details" android:orientation="vertical"
    tools:showIn="@layout/activity_tzlc_player_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="0.65">
        <ImageView android:id="@+id/playerPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.6"/>
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="0.4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.25">
                <TextView android:layout_weight="0.62"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:text="Player Name " android:gravity="center" android:textAlignment="textStart"/>
                <TextView android:id="@+id/txtplayerDetailName"
                    android:layout_width="match_parent" android:layout_weight="0.38"
                    android:layout_height="match_parent" android:text="Player" android:gravity="center" android:textAlignment="textStart" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.25">
                <TextView android:layout_weight="0.62"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:text="Club" android:gravity="center" android:textAlignment="textStart"/>
                <TextView android:id="@+id/txtplayerDetailClub"
                    android:layout_width="match_parent" android:layout_weight="0.38"
                    android:layout_height="match_parent" android:text="Club" android:gravity="center" android:textAlignment="textStart" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.25">
                <TextView android:layout_weight="0.72"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:text="Organization " android:gravity="center" android:textAlignment="textStart"/>
                <TextView android:id="@+id/txtplayerDetailOrg"
                    android:layout_width="match_parent" android:layout_weight="0.82"
                    android:layout_height="match_parent" android:text="Org" android:gravity="center" android:textAlignment="textStart" android:textStyle="bold"/>
                <ImageView android:id="@+id/imgplayerOrgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0.88" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.25">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent" android:id="@+id/tabPlayerDetailLayout" app:tabMaxWidth="0dp"
        android:layout_height="match_parent" android:layout_weight="0.87">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent" android:id="@+id/viewPlayerDetailPage"
        android:layout_height="match_parent" android:layout_weight="0.4">

    </android.support.v4.view.ViewPager>

</LinearLayout>